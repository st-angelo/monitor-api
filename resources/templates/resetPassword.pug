extends base

block content
  p.title Reset your password
  span Hello #[span.bold #{name}],
  p Forgot your password? Click the link below and set a new one.
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='center')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') Reset your password
  p.italic If you didn't forget your password, please ignore this email!
  span Cheers,
  br
  span.accent Monitor Team
